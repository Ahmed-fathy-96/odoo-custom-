<odoo>

    <record id="purchase_request_action" model="ir.actions.act_window">
        <field name="name">purchase.request</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="purchase_request_from_view" model="ir.ui.view">
        <field name="name">purchase.request.from</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Submit for Approval"
                            class="oe_highlight"
                            name="submit_to_Approved" type="object"
                            attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Cancel"
                            class="oe_highlight"
                            name="cancel_fun" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Approve"
                            class="oe_highlight"
                            name="approve_fun" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'to be approved')]}"/>
                    <button string="Reject"
                            name="%(purchase_request.reject_request_wizard)d"
                            class="oe_highlight"
                            type="action"
                            attrs="{'invisible':[ ('state', '!=', 'to be approved')]}"/>
                    <button string="Reset to draft"
                            class="oe_highlight bg-danger"
                            name="reset_fun" type="object"
                            attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_ids"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="total_price"/>
                            <field name="rejection_reason" readonly="1" attrs="{'invisible':[ ('state', '!=', 'reject')]}"/>

                        </group>
                        <notebook>
                            <page string="Orders">
                                <field name="order_lines">
                                    <tree>
                                        <field name="description"/>
                                        <field name="cost_price"/>
                                        <field name="quantity"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>